@import '../setting'
*
  margin 0
  padding 0
html
body
  overflow hidden
  min-width 1000px
  background-color $pageBgColor
// ul
//   list-style none
pre
  margin-left 10px
  padding 15px
  line-height 1.5
  color $codeColor
  background $codeBgColor
  border 1px solid $preBorder
code
  color $codeColor
  font-size 1rem
  font-weight normal
  font-family Consolas,"Courier New",Courier,FreeMono,monospace
  background $codeBgColor

.page
  position relative
  width 100%
  height 100vh
  overflow hidden
  background-color $pageBgColor
  color $pageColor
  &:after
    content ''
    width 20px
    height 100%
    background-color inherit
    position absolute
    top 0
    right 0
    z-index 1
  .content
    position absolute
    top 50%
    transform translateY(-50%)
    height $pageHeight
    width 100%
    overflow auto
    p
    li
      line-height 2rem
      font-weight $pageFontWeight
    ul,pre,p,blockquote,h3,h4,h5,h6,li
      width $pageWidth
      padding 10px
      margin 0 auto
    li>p,ul>li
      margin 0
      padding 10px 0
    b
      color $bColor
    h4
      font-size 1.3rem
    img
      border-radius 10px
      box-shadow 0 0 10px 2px $codeBgColor
.control
  position fixed
  z-index 10
  right 30px
  bottom 30px
.hide
  display none