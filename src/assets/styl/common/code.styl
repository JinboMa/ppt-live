@import '../setting'

p code
li>code
h2>code
h3>code
  margin-left 3px
  margin-right 3px
  padding-left 3px
  padding-right 3px
  color $pageCodeColor
  background transparent

code[class*="language-"]
pre[class*="language-"]
  color $textColor
  text-shadow 0 1px rgba(0,0,0,0.3)
  font-family Consolas, Monaco, 'Andale Mono', monospace
  direction ltr
  text-align left
  white-space pre
  word-spacing normal
  word-break normal
  -moz-tab-size 4
	-o-tab-size 4
	tab-size 4
	-webkit-hyphens none
	-moz-hyphens none
	-ms-hyphens none
	hyphens none

pre[class*="language-"]
  padding 1em
	margin .5em 0
	overflow auto
	border-radius 0.3em

:not(pre) > code[class*="language-"]
pre[class*="language-"]
	background $codeBgColor

:not(pre) > code[class*="language-"]
	padding .1em
	border-radius .3em

.token.comment
.token.prolog
.token.doctype
.token.cdata
	color $commentColor

.token.punctuation
	color $punctuationColor

.namespace
	opacity .7

.token.property
.token.tag
.token.constant
.token.symbol
	color $symbolColor

.token.boolean
.token.number
	color $numberColor

.token.selector
.token.attr-name
.token.string
.token.builtin
	color $stringColor

.token.operator
.token.entity
.token.url
.language-css .token.string
.style .token.string
.token.variable
	color $operatorColor

.token.atrule
.token.attr-value
	color $atruleColor

.token.keyword
	color $keywordColor

.token.regex
.token.important
	color $regexColor

.token.important
	font-weight bold

.token.entity
	cursor help